[core]
	editor = vim
	hooksPath = ./git-config/hooks
[alias]
	anw = !git diff -U0 -w --no-color -- \"$@\" | git apply --cached --ignore-whitespace --unidiff-zero "#" 
[fetch]
	recurseSubmodules = True
[push]
	recurseSubmodules = check
[diff]
	submodule = log
