#!/bin/sh

# Update apt-get, get zsh, ag, ack
sudo apt-get update -y
sudo apt-get upgrade -y
sudo apt-get install zsh -y
sudo apt-get install ack-grep -y
sudo apt-get install silversearcher-ag -y
export SHELL="/bin/zsh"

# Copy files and init git
cd "$HOME/myconfig"
git submodule update --init --recursive
git pull --recurse-submodules=yes

# Apply terminal configs
cd ".terminfo"
tic "tmux.terminfo"
tic "tmux-256color.terminfo"
tic "xterm-256color-italic.terminfo"
cd ".."

# Install python packages
pip3 install -r requirements.txt

# Copy files to home directory
cp -rf * "$HOME"
cp -rf .[^.]* "$HOME"
cd "$HOME"

# Move the tmux ssh agent config in .ssh
mv rc "$HOME/.ssh/"

# Remove extra files
rm -rf .git/
rm -rf .gitmodules
rm -rf scripts/

# Configure vimrc and YCM
cd "$HOME/.vim_runtime"
# Vim x11 capability
sudo apt-get install vim-gtk -y
sh install_awesome_vimrc.sh

# Tools to compile YCM
sudo apt-get install build-essential cmake -y
sudo apt-get install python-dev python3-dev -y

cd "$HOME"

# Install tmux from source file
sh tmux_build_from_source_ubuntu.sh
rm -rf tmux_build_from_source_ubuntu.sh
sudo apt-get install xclip -y
tmux
tmux source-file "$HOME/.tmux.conf"

# Add hooks to diseaseTools
# sed '/logallrefupdates = true/a \    hooksPath = ~/diseaseTools/.git/hooks' ~/diseaseTools/.git/config
